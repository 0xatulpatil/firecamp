- let publicPath = process.env.NODE_ENV === 'development' ? '/' : '/js/'
- publicPath = process.env.AppFormat === 'webapp' ? './js/' : publicPath


doctype html

html
  head
    meta(charset='UTF-8')
    title Firecamp
    base(href='./')
    style.
      body { width: 500px; }

      :not(input):not(textarea), :not(input):not(textarea)::after, :not(input):not(textarea)::before {
        -webkit-user-select: none;
        user-select: none;
      }

  body
    #root
      script(src= publicPath + 'identity.bundle.js')
      script(src= publicPath + 'vendor.bundle.js')